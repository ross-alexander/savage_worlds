\newtcolorbox{dbox}[0]{colframe=BurntOrange,colback=white,colupper=black,fonttitle=\bfseries,
  nobeforeafter,center title,
  left=2mm,right=2mm,top=2mm,bottom=2mm,boxsep=0mm,toptitle=0.5mm,bottomtitle=0.5mm}

\newtcolorbox{mybox}[1]{colframe=BurntOrange,colback=white,colupper=black,fonttitle=\bfseries,
